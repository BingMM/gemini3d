{
  "version": 3,

"configurePresets": [
{
  "name": "release",
  "displayName": "Turns on Release flags",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Release"
  }
},
{
  "name": "debug",
  "displayName": "Turns on debug flags, including array bounds check.",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Debug"
    }
},
{
  "name": "multi",
  "displayName": "Ninja Multi config",
  "generator": "Ninja Multi-Config",
  "binaryDir": "${sourceDir}/build"
},
{
  "name": "build",
  "displayName": "build all libraries",
  "description": "Build all external libraries (except MPI) without searching for existing libraries.",
  "cacheVariables": {
    "lapack_external": "on",
    "scalapack_external": "on",
    "mumps_external": "on",
    "hdf5_external": "on"
  }
},
{
  "name": "phony"
}
],
"buildPresets": [
  {
    "name": "release",
    "configurePreset": "multi",
    "configuration": "Release"
  },
  {
    "name": "debug",
    "configurePreset": "multi",
    "configuration": "Debug"
  },
  {
    "name": "core",
    "configurePreset": "phony",
    "targets": ["gemini.bin", "gemini3d.run", "gemini3d.compare"]
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "phony",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "stopOnFailure": false
  }
},
{
  "name": "release", "inherits": "default",
  "configurePreset": "multi",
  "configuration": "Release"
},
{
  "name": "debug", "inherits": "default",
  "configurePreset": "multi",
  "configuration": "Debug"
}
]
}
